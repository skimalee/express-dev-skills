<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1><%= title %> as of <%= time %></h1>

    <ul>
        <% skills.forEach(function(s, idx) { %>
            <li>
              <form action="/skills/<%= idx %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
              </form>
              <a href="/skills/<%= idx %>"><%= s.skill %></a>
                - 
              <%= s.done ? 'done' : 'not done' %>
            </li>
          <% }); %>
    </ul>
    <a href='/skills/new'>Add Skill</a>
</body>

</html>